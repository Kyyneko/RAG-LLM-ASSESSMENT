# ============================================================
# DATABASE CONFIGURATION
# ============================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=silab_db



# ============================================================
# OPENROUTER / LLM API CONFIGURATION
# ============================================================
# Gunakan variabel lingkungan (environment variable) untuk API key.
# Jangan pernah commit file ini ke repository publik.
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Model yang digunakan: Google Gemma 3 27B Instruct (Free tier)
LLM_MODEL=google/gemma-3-27b-it:free

# Legacy model settings (jika masih ada yang menggunakan)
DEEPSEEK_CHAT_MODEL=deepseek/deepseek-r1:free



# ============================================================
# APPLICATION SETTINGS
# ============================================================
UPLOAD_FOLDER=upload/
MAX_FILE_SIZE_MB=50



# ============================================================
# SECURITY & LOGGING (opsional)
# ============================================================
# LOG_LEVEL dapat disesuaikan: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


# ============================================================
# HUGGINGFACE CONFIGURATION
# ============================================================
HUGGINGFACE_HUB_TOKEN=your-huggingface-token-here
