# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=silab_db

# Alternative connection string format (optional)
# DATABASE_URL=mysql+pymysql://user:password@host/database

# ============================================================
# OPENROUTER / LLM API CONFIGURATION
# ============================================================
# Gunakan variabel lingkungan (environment variable) untuk API key.
# Jangan pernah commit file ini ke repository publik.
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Model yang digunakan: OpenAI GPT-OSS 120B (Free tier via OpenRouter)
LLM_MODEL=openai/gpt-oss-120b:free

# ============================================================
# APPLICATION SETTINGS
# ============================================================
UPLOAD_FOLDER=upload/
MAX_FILE_SIZE_MB=50

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5002

# ============================================================
# SECURITY & LOGGING
# ============================================================
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Secret key untuk session (ganti di production!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# ============================================================
# HUGGINGFACE CONFIGURATION
# ============================================================
HUGGINGFACE_HUB_TOKEN=your-huggingface-token-here

# ============================================================
# API SECURITY
# ============================================================
# API Key Authentication (comma-separated for multiple keys)
API_KEYS=key_user1_abc123,key_user2_xyz789

# Rate Limiting (requests per minute per API key)
RATE_LIMIT_PER_MINUTE=10
